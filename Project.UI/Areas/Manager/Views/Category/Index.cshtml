@model CategoryDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<h3 class="mt-4">Kategori Listesi</h3>
<table class="table table-bordered table-striped table-responsive">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th>Sil</th>
            <th>Güncelle</th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model.Categories.Count() <= 0)
        {
            <tr>
                <td colspan="3">
                    @Model.Message
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.Categories)
            {

                <tr>
                    <td>
                        <a asp-area="Manager" asp-controller="Category" asp-action="GetProducts" asp-route-id="@item.Id">@item.CategoryName</a>
                    </td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-danger" asp-area="Manager" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id">
                            Sil
                        </a>

                    </td>
                    <td>
                        <a class="btn btn-success" asp-area="Manager" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id">
                            Güncelle
                        </a>
                    </td>
                </tr>
            }

        }
    </tbody>


</table>


