@model OrderDetailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<partial name="~/Areas/Manager/Views/OrderDetail/OrderDetailPartial.cshtml" />

<h3 class="mt-4">Sipariş Listesi</h3>
@if (Model.Message != null)
{
    <div class="text-danger">
        <p>@Model.Message</p>
    </div>
}
else
{
    <!-- page start-->
    <section class="panel">
        <header class="panel-heading">
            Siparişler Listesi
        </header>
        <div class="panel-body">
            <div class="adv-table">
                <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Müşteri Adı</th>
                            <th>Müşteri Soyadı</th>
                            <th>Toplam Ürün Miktarı</th>
                            <th>Sipariş Tutarı</th>
                            <th>Sipariş Detayı</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (OrderDetail item in Model.OrderDetails)
                        {
                            <tr class="gradeX">
                                @if (item.ModifiedDate != null)
                                {
                                    <td>@item.ModifiedDate</td>
                                }
                                else
                                {
                                    <td>@item.CreatedDate</td>
                                }
                                <td>@item.Order.Customer.FirstName</td>
                                <td>@item.Order.Customer.LastName</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice</td>
                                <td>
                                    <button class="btn btn-primary" href="#!" data-toggle="modal" data-target="#orderDetailModal" data-product-id="@item.ProductId" data-order-id="@item.OrderId" id="showOrderDetailModal">
                                        Sipariş Detayı
                                    </button>
                                 

                                </td>
                                <td>

                                    <a class="btn btn-danger" asp-area="Manager" asp-controller="OrderDetail" asp-action="DeleteOrder" asp-route-orderId="@item.OrderId" asp-route-productId="@item.ProductId">
                                        Sil
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-success" asp-area="Manager" asp-controller="OrderDetail" asp-action="UpdateOrder" asp-route-id="@item.Id">
                                        Güncelle
                                    </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>

            </div>
        </div>
    </section>
    <!-- page end-->
}


<script type="text/javascript">
    /*  modal for show order details  */
   
        $(function () {
            $(document).on('click', "#showOrderDetailModal", function (e) {
                //var btn = $(e.relatedTarget);
                //console.log(btn);
                //var orderId = btn.data('order-id');
                var orderId = $(this).attr('data-order-id');
                console.log(orderId);
                $.ajax({
                    type: 'GET',
                    url: '/Manager/OrderDetail/DetailsOfOrder/',
                    data: { orderId },
                    success: function (data) {
                        $("#order-detail-content").html(data);
                    }
                });

            });
        });

</script>
