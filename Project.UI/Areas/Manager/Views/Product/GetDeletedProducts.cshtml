@model ProductDto
@{
    ViewData["Title"] = "GetDeletedProducts";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<h3 class="mt-4">Eski Ürünler Listesi</h3>
@if (Model.Message != null)
{
    <div class="text-danger">
        <p>@Model.Message</p>
    </div>
}
else
{
    <table class="table table-bordered table-striped table-responsive">
        <thead>
            <tr>
                <th>Kategori Adı</th>
                <th>Ürün Adı</th>
                <th>Tedarikçi Adı</th>
                <th>Stok</th>
                <th>Fiyat</th>
                <th>Sil</th>
                <th>Güncelle</th>

            </tr>
        </thead>
        <tbody>

            else
            {
            @foreach (var item in Model.Products)
            {

                <tr>
                    <td>@item.Category.CategoryName</td>
                    <td>@item.ProductName</td>
                    <td>@item.Supplier.CompanyName</td>
                    <td>@item.UnitsInStock</td>
                    <td>@item.UnitPrice</td>
                    <td>
                        <a class="btn btn-danger" asp-area="Manager" asp-controller="Product" asp-action="MakeProductActive" asp-route-id="@item.Id">
                            Aktif Yap
                        </a>

                    </td>
                </tr>
            }
            }

        </tbody>
    </table>
}



