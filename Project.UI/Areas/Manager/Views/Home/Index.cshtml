@model AppUserDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<h3 class="mt-4">Members List</h3>
<table class="table table-bordered table-striped table-responsive">
    <thead>
        <tr>
            <th>Fotoğraf</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.AppUsers.Count() <= 0)
        {
            <tr>
                <td colspan="3">
                    @ViewBag.error
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.AppUsers)
            {
                <tr>
                    <td>@item.Picture</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td user-roles="@item.Id"></td>
                    <td>
                        <a class="btn btn-success" asp-area="Manager" asp-controller="Home" asp-action="DeleteUser" asp-route-id="@item.Id">
                             Sil
                        </a>
                        <a class="btn btn-success" asp-area="Manager" asp-controller="Home" asp-action="UpdateUser" asp-route-id="@item.Id">
                            Güncelle
                        </a>
                    </td>
                </tr>
            }

        }
    </tbody>


</table>
